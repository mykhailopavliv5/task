= turbo_frame_tag dom_id(task) do
  .card.bg-light.py-2
    .card-body
      %h5.card-title= task.title
      .d-grid.d-md-flex.justify-content-md-between.mt-2
        %div
          = render 'priority', task: task
        .d-flex
          = link_to "Edit", edit_task_path(task), class: "btn btn-link", type: "button"
          = link_to "Log", logs_task_path(task), class: "btn btn-link", type: "button"
          = button_to "Remove", task_path(task), class: "btn btn-link", type: "button", method: :delete
