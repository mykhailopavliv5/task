%header
  %nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container-fluid
      - if user_signed_in?
        %div.text-light
          Welcome #{current_user.first_name} #{current_user.last_name}
      %form.d-flex.justify-content-end
        - if params[:action] == 'index'
          %select.form-select.me-2(aria-label="Priority")
            %option(selected="selected"){disabled: "disabled"} Priority
            %option(value="1") High
            %option(value="2") Medium
            %option(value="3") Low
        - unless params[:action] == 'new'
          = link_to "+", new_task_path, method: :get, class: "btn btn-primary"
      - if user_signed_in?
        = button_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-danger'
