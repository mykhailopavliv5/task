= render 'header'
.card.border-0
  .card-body
    %h5.card-title.text-center Logs
    %main.w-100.m-auto{style: 'max-width: 600px'}
      %ul.list-group.list-group-flush
        - @logs.each do |log|
          %li.list-group-item.d-flex.justify-content-between.align-items-start
            .ms-2.me-auto= log.event
            %small= log.created_at
      = link_to "Back", tasks_path, class: 'btn btn-secondary w-100'
= render 'footer'
